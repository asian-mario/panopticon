{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProvincesFile",
  "type": "object",
  "required": ["provinces"],
  "properties": {
    "provinces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "pos"],
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "pos": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" }
            }
          },
          "region": { "type": "string" }
        }
      }
    }
  }
}
